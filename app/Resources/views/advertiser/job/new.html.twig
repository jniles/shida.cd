{% block title %}{{ vm.pageTitle }}{% endblock %}

{% extends '::base_layout.html.twig' %}

{% block base_layout %}
    <div class="site-layout">
        <div class="a">
            <h2>Publier un nouvel offre</h2>

            {{ form_start(form, {'attr': {'class': 'form', 'id': 'form-job'}}) }}
                <div class="form-group">
                    {{ form_label(form.title, 'Titre') }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.summary, 'Description') }}
                    {{ form_widget(form.summary, {'attr': {'rows': '5'}}) }}
                    {{ form_errors(form.summary) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.paymentMethod, 'Méthode de payement') }}
                    {{ form_widget(form.paymentMethod) }}
                    {{ form_errors(form.paymentMethod) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.skills, 'Competences requises') }}
                    {{ form_widget(form.skills) }}
                    {{ form_errors(form.skills) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.subCategories, 'Catégories') }}
                    {{ form_widget(form.subCategories) }}
                    {{ form_errors(form.subCategories) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.locations, 'Localisation') }}
                    {{ form_widget(form.locations) }}
                    {{ form_errors(form.locations) }}
                </div>

{#                 <div class="form-group">
                    {{ form_label(form.startAt, 'Date de demarrage') }}
                    {{ form_widget(form.startAt) }}
                    {{ form_errors(form.startAt) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.timeLeft, 'Date de cloture') }}
                    {{ form_widget(form.timeLeft) }}
                    {{ form_errors(form.timeLeft) }}
                </div> #}
                {{ form_widget(form._token) }}


                <div class="form-group">
                    <button class="button" type="submit">enregister</button>
                </div>


            {{ form_end(form, {'render_rest': false}) }}

        </div>

        <div class="b">
            {% include 'FOSUserBundle:sidebar:b.html.twig' %}
        </div>
    </div>
{% endblock %}
