{% block title %}{{ vm.pageTitle }}{% endblock %}

{% extends '::base_layout.html.twig' %}

{% block base_layout %}
    <div class="site-layout">
        <div class="a">
            <div class="row">
                <div class="col-xs-12 col-md-10">
                    <h2>Mise à jour</h2>

                    {{ form_start(edit_form, {'attr': {'class': 'form', 'id': 'form-job'}}) }}
                        <div class="form-group">
                            {{ form_label(edit_form.title, 'Titre') }}
                            {{ form_widget(edit_form.title) }}
                            {{ form_errors(edit_form.title) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.summary, 'Description') }}
                            {{ form_widget(edit_form.summary, {'attr': {'rows': '5'}}) }}
                            {{ form_errors(edit_form.summary) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.paymentMethod, 'Méthode de payement') }}
                            {{ form_widget(edit_form.paymentMethod) }}
                            {{ form_errors(edit_form.paymentMethod) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.skills, 'Competences requises') }}
                            {{ form_widget(edit_form.skills) }}
                            {{ form_errors(edit_form.skills) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.subCategories, 'Catégories') }}
                            {{ form_widget(edit_form.subCategories) }}
                            {{ form_errors(edit_form.subCategories) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.locations, 'Localisation') }}
                            {{ form_widget(edit_form.locations) }}
                            {{ form_errors(edit_form.locations) }}
                        </div>

                        {#
                        <div class="form-group">
                            {{ form_label(edit_form.startAt, 'Date de demarrage') }}
                            {{ form_widget(edit_form.startAt) }}
                            {{ form_errors(edit_form.startAt) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(edit_form.timeLeft, 'Date de cloture') }}
                            {{ form_widget(edit_form.timeLeft) }}
                            {{ form_errors(edit_form.timeLeft) }}
                        </div>
                        #}
                        {{ form_widget(edit_form._token) }}


                        <div class="form-group">
                            <button class="button" type="submit">enregister</button>
                        </div>
                    {{ form_end(edit_form, {'render_rest': false}) }}
                </div>
                <div class="col-xs-12 col-md-2">
                    {{ form_start(delete_form, {'attr': {'id': 'form-job-delete'}}) }}
                    {{ form_widget(delete_form) }}
                    <button class="button button--danger button--no-shadow">Supprimer</button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>

        <div class="b">
            {% include 'FOSUserBundle:sidebar:b.html.twig' %}
        </div>
    </div>
{% endblock %}
