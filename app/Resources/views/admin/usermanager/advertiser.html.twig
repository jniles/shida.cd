{% set sidebar_menu_active = 'users_advertiser' %}

{% block title %}{{ vm.pageTitle }}{% endblock %}

{% extends '::base_admin.html.twig' %}

{% block body %}
    <header class="header header--min">
        <div class="container">
            <div class="g-content-container">
                <h2>Annonceurs</h2>
            </div>
        </div>
    </header>


    <section class="section">
        <div class="container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>username</th>
                        <th>email</th>
                        <th>job published</th>
                        <th>is active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in vm.collections %}
                        <tr data-id="{{ user.id }}">
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.jobPublished }}</td>
                            <td>{{ user.enabled|raw }}</td>
                            <td><a href="{{ path('admin_usermanagers_show', {'id': user.id}) }}" class="btn btn-success btn-sm">view</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>


{% endblock %}
