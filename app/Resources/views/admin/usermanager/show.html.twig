{% set sidebar_menu_active = 'users' %}

{% block title %}{{ vm.pageTitle }}{% endblock %}

{% extends '::base_admin.html.twig' %}

{% block body %}
    <header class="header header--min">
        <div class="container">
            <div class="g-content-container">
                <h3>Les offres de {{ vm.fullName }}</h3>
                <a href="{{ path('manager_job_jobs_new', {'id': vm.id}) }}" class="btn btn-success btn-lg">+ publier une offre</a>
                <a href="{{ path('admin_usermanagers_edit', {'id': vm.id}) }}" class="btn btn-warning btn-lg">modifier son compte</a>
            </div>
        </div>
    </header>

    <section class="section">
        <div class="container">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>title</th>
                        <th>est visible ?</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for job in vm.jobs %}
                    <tr data-id="{{ job.id }}">
                        <td>
                            {{ job.title }} <br>
                            <em>{{ job.summary|slice(0, 50) }}</em>
                        </td>
                        <td>
                            {% if job.active %}
                                <span class="label label-success">yes</span>
                            {% else %}
                                <span class="label label-default">no</span>
                            {% endif %}
                        </td>
                        <td><a href="{{ path('manager_job_jobs_show', {'id': job.id}) }}" class="btn btn-success btn-sm">afficher</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
{% endblock %}
