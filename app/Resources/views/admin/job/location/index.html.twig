{% set sidebar_menu_active = 'locations' %}

{% block title %}{{ vm.pageTitle }}{% endblock %}

{% extends '::base_admin.html.twig' %}

{% block body %}
    <header class="header header--min">
        <div class="container">
            <div class="g-content-container">
                <h2>les localisations</h2>
                <a href="{{ path('manager_job_locations_new') }}" class="btn btn-success btn-lg">+ ajouter</a>
            </div>
        </div>
    </header>


    <section class="section">
        <div class="container">
            <table class="table table-striped table-bordered">
                <thead>
                    <th>ville</th>
                    <th>pays</th>
                    <th>actions</th>
                </thead>
                <tbody>
                    {% for location in vm.collections %}
                        <tr data-id="{{ location.id }}">
                            <td>{{ location.town }}</td>
                            <td>{{ location.country }}</td>
                            <td>
                                <a href="{{ path('manager_job_locations_show', {'id': location.id}) }}" class="btn btn-default btn-sm">show</a>
                                <a href="{{ path('manager_job_locations_edit', {'id': location.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}