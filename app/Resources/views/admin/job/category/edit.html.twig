{% set sidebar_menu_active = 'categories' %}

{% block title %}{{ vm.pageTitle }}{% endblock %}

{% extends '::base_admin.html.twig' %}

{% block body %}
    <header class="header header--min">
        <div class="container">
            <div class="g-content-container">
                <h2>la categorie</h2>
                <a href="{{ path('manager_job_categories_new') }}" class="btn btn-success btn-lg">+ ajouter</a>
            </div>
        </div>
    </header>

    <section class="section section--with-sidebar">
        <div class="container container--min">
            {{ form_start(edit_form, {'attr': {'id': 'form-job-category'}}) }}
            <div class="form-group">
                {{ form_label(edit_form.name, 'Nom') }}
                {{ form_widget(edit_form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(edit_form.name) }}
            </div>

            {{ form_rest(edit_form) }}

            <div class="form-group">
                <button class="btn btn-primary" type="submit">Enregistrer</button>
            </div>
            {{ form_end(edit_form) }}
        </div>
        <div class="section__sidebar">
            {{ form_start(delete_form, {'attr': {'id': 'form-job-category-delete'}}) }}
            {{ form_widget(delete_form) }}
            <p>attention une fois supprimer vous ne pouvez plus faire marche en arriere !</p>
            <button class="btn btn-danger btn-forms">Supprimer</button>
            {{ form_end(delete_form) }}
        </div>
    </section>
{% endblock %}
