<div class="search">
    <div class="container">
        <div class="row">
            <form action="{{ path('jobs_search_index') }}" method="GET">
                <div class="col-xs-12">
                    <h3>Retrouvez un travail radiment</h3>
                </div>
                <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                        <p class="placeholder">Quoi ?</p>
                        <select name="categories[]" multiple class="fab-select2">
                            {% for category in categories %}
                                <option value="{{ category.name }}">{{ category.name }}</option>
                            {% endfor %}
                        </select>
                        <span class="placeholder">exemple: {{ categories[0].name|default('') }}, {{ categories[1].name|default('')}}</span>
                    </div>
                </div>

                <div class="col-xs-12 col-sm-6">
                    <div class="form-group">
                        <p class="placeholder">Ou ?</p>
                        <select name="locations[]" multiple class="fab-select2">
                            {% for location in locations %}
                                <option value="{{ location.town }}">{{ location.town }}</option>
                            {% endfor %}
                        </select>
                        <span class="placeholder">exemple: {{ locations[0].town|default('') }}, {{ locations[1].town|default('') }}</span>
                    </div>
                </div>

                <div class="col-xs-12">
                    <button class="button">Rechercher</button>
                </div>
            </form>
        </div> <!-- /.row -->
    </div>
</div> <!-- ./search -->