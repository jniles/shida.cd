{# default Sliding pagination control implementation #}

{% if pageCount > 1 %}
    <section class="last-job__pagination">
        {% if first is defined and current != first %}
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" class="round-button left">
                <i class="ion-chevron-left"></i>
            </a>
        {% endif %}

        {% if previous is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" class="round-button prev"><i class="ion-arrow-left-c"></i></a>
        {% endif %}

        <span class="last-job__pagination__number">
            {% for page in pagesInRange %}
                {% if page != current %}
                    <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" class="round-button round-default">{{ page }}</a>
            {% else %}
                    <span class="round-button round-button--current round-default">{{ page }}</span>
                {% endif %}
            {% endfor %}
        </span>

        {% if next is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" class="round-button next"><i class="ion-arrow-right-c"></i></a>
        {% endif %}

        {% if last is defined and current != last %}
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" class="round-button right">
                <i class="ion-chevron-right"></i>
            </a>
        {% endif %}
    </section>
{% endif %}
